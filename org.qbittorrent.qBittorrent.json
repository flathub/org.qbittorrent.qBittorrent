{
  "app-id": "org.qbittorrent.qBittorrent",
  "branch": "stable",
  "runtime": "org.kde.Platform",
  "sdk": "org.kde.Sdk",
  "runtime-version": "5.9",
  "command": "qbittorrent",
  "rename-icon": "qbittorrent",
  "copy-icon": true,
  "rename-desktop-file": "qbittorrent.desktop",
  "rename-appdata-file": "qbittorrent.appdata.xml",
  "finish-args": [
    "--socket=wayland",
    "--socket=x11",
    "--share=ipc",
    "--share=network",
    /* For QtSingleApplication */
    "--filesystem=/tmp",
    "--filesystem=host",
    "--talk-name=org.kde.StatusNotifierWatcher",
    "--talk-name=org.freedesktop.Notifications",
    "--talk-name=org.freedesktop.PowerManagement",
    "--talk-name=org.gnome.SessionManager"
  ],
  "modules": [
    {
      "name": "boost",
      "buildsystem": "simple",
      "cleanup": [
        "/include"
      ],
      "build-commands": [
        "./bootstrap.sh",
        "./b2 install variant=release link=shared runtime-link=shared --prefix=/app --with-system --with-chrono --with-random -j `nproc`"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://dl.bintray.com/boostorg/release/1.66.0/source/boost_1_66_0.tar.gz",
          "sha256": "bd0df411efd9a585e5a2212275f8762079fed8842264954675a4fddc46cfcf60"
        }
      ]
    },
    {
      "name": "libtorrent",
      "config-opts": [
        "--disable-static",
        "--with-boost=/app",
        "--with-libiconv"
      ],
      "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/lib/*.la",
        "/share/cmake"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/arvidn/libtorrent/releases/download/libtorrent-1_1_7/libtorrent-rasterbar-1.1.7.tar.gz",
          "sha256": "8133bf683308decc24da22aff17437e36c522d8959bcf934e94cf7a3a567f3a9"
        }
      ]
    },
    {
      "name": "qbittorrent",
      "config-opts": [
        "--with-boost=/app"
      ],
      "cleanup": [
        "/share/man"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/qbittorrent/qBittorrent/archive/release-4.1.1.tar.gz",
          "sha256": "c12d11ebd1127b2493cfc623cc7f2ecd7cb2fd15f27a091383767d4c9b04a2d1"
        }
      ]
    }
  ]
}
